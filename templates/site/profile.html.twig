{% extends 'layout.html.twig' %}

{% block title "Adrien PIERRARD - Profile" %}

{% block body %}

    <!--================ Start Profile Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-right">
                    <h1>{% trans %}My Profile{% endtrans %}</h1>
                    <div class="page_link">
                        <a href="{{ path('home') }}">{% trans %}Homepage{% endtrans %}</a>
                        <a href="{{ path('app_contact') }}">Contact</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================ End Profile Banner Area =================-->

    <!--================ Start Profile Area =================-->
    <section class="section_gap portfolio_area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <div class="main-title">
                        <h1>{{ user.username }}</h1>
                        <p>
                            {% trans %}Here, you can update your profile.{% endtrans %}
                        </p>
                        <p>
                            {% trans %}Let the password empty if you don't want to change it.{% endtrans %}
                        </p>
                    </div>

                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    {{ form_start(form, {'attr': {'class': 'row contact_form'}}) }}
                    <div class="col-md-5 offset-md-1">
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.firstname) }}
                    </div>
                    <div class="col-md-5 offset-lg-1">
                        {{ form_row(form.password) }}
                    </div>
                    <div class="col-lg-12 col-md-11 text-right">
                        <button class="primary-btn">
                            {% trans %}Modify{% endtrans %}
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <!--================ End Profile Area =================-->

{% endblock %}
