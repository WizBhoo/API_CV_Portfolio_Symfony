{% extends 'admin/layout.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="overview-wrap">
                <h1 class="title-1 m-b-35 text-center">{% trans %}Create a User account{% endtrans %}</h1>
                {% for message in app.flashes('alert') %}
                    <div class="alert alert-danger text-center">
                        {{ message|trans(app.flashes, 'messages') }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form) }}
            {% if not form.vars.valid %}
                <div class="text-center">
                    {{ form_errors(form) }}
                </div>
            {% endif %}
            <div class="row">
                <div class="col-lg-6">
                    {{ form_row(form.username) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.roles) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <button class="btn btn-success">{% trans %}Create{% endtrans %}</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
