{% extends 'layout.html.twig' %}

{% block title post.title %}

{% block body %}

    <!--================ Start Single Blog Post Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-right">
                    <h1>Article {{ post.id }}</h1>
                    <div class="page_link">
                        <a href="{{ path('home') }}">{% trans %}Homepage{% endtrans %}</a>
                        <a href="{{ path('app_blog_home') }}">Blog</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================ End Single Blog Post Banner Area =================-->

    <!--================Blog Post Area =================-->
    <section class="blog_area single-post-area section_gap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-12 posts-list">
                    <div class="single-post row">
                        <div class="col-lg-12">
                            <div class="feature-img text-center">
                                <img class="img-fluid" src="{{ asset('img/blog/') }}{{ post.imagePath }}" alt="{{ post.imagePath }}">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-5">
                            <div class="blog_info text-right">
                                <ul class="blog_meta list">
                                    <li>
                                        {{ post.author.firstname }} {{ post.author.lastname }}
                                        <i class="lnr lnr-user"></i>
                                    </li>
                                    <li>
                                        {% trans %}Modified{% endtrans %} {{ post.updatedAt|date("d/m/Y Ã  H:i") }}
                                        <i class="lnr lnr-calendar-full"></i>
                                    </li>
                                    <li>
                                        {% trans %}Commented{% endtrans %} X {% trans %}times{% endtrans %}
                                        <i class="lnr lnr-bubble"></i>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-7 blog_details">
                            <h2 class="text-center">{{ post.title }}</h2>
                            <p class="excert text-justify">
                                {{ post.content | nl2br }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Blog Post Area =================-->

{% endblock %}
