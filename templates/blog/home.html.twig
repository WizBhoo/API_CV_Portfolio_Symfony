{% extends 'layout.html.twig' %}

{% block title "PIERRARD Adrien - Blog" %}

{% block body %}

    <!--================Blog Home Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-right">
                    <h1>{% trans %}My Blog{% endtrans %}</h1>
                    <div class="page_link">
                        <a href="{{ path('home') }}">{% trans %}Homepage{% endtrans %}</a>
                        <a href="{{ path('app_blog_home') }}">Blog</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Blog Home Banner Area =================-->

    <!--================Blog Area =================-->
    <section class="section_gap blog_area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 text-center">
                    <div class="main-title">
                        <h1>
                            {% trans %}Welcome{% endtrans %}<br>
                            {% trans %}to my Blog{% endtrans %} !!!
                        </h1>
                        <p>
                            {% trans %}Here is the list of my Articles from the most recent to the oldest allowing you to learn{% endtrans %}<br>
                            {% trans %}more about my professional choices as well as my development wishes.{% endtrans %}<br>
                            {% trans %}Good reading{% endtrans %} !
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    {% for post in posts %}
                        <article class="row blog_item">
                            <div class="col-md-5">
                                <div class="blog_info text-right">
                                    <ul class="blog_meta list">
                                        <li>
                                            {{ post.author.firstname }} {{ post.author.lastname }}
                                            <i class="lnr lnr-user"></i>
                                        </li>
                                        <li>
                                            {% trans %}Modified{% endtrans %} {{ post.updatedAt|date("d/m/Y Ã  H:i") }}
                                            <i class="lnr lnr-calendar-full"></i>
                                        </li>
                                        <li>
                                            {% trans %}Commented{% endtrans %} X {% trans %}times{% endtrans %}
                                            <i class="lnr lnr-bubble"></i>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="blog_post">
                                    <div class="blog_details">
                                        <a href="{{ path('app_blog_show', {slug: post.slug}) }}">
                                            <h2>{{ post.title }}</h2>
                                        </a>
                                        <p class="text-justify">{{ post.extract | nl2br }}</p>
                                        <a href="{{ path('app_blog_show', {slug: post.slug}) }}" class="primary-btn">{% trans %}See more{% endtrans %}</a>
                                    </div>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <!--================Blog Area =================-->
{% endblock %}
